<h2 class="offset-md-2">配送先編集</h2>
<%= form_with model: @address, local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-5">
      <div>
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, value: @address.postal_code %>
      </div>
      <div>
        <%= f.label "住所" %>
        <%= f.text_field :address, size:50, value: @address.address %>
      </div>
      <div>
        <%= f.label "宛名" %>
        <%= f.text_field :name, value: @address.name %>
      </div>
      <div class="text-end">
        <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  </div>
</div>
<% end %>