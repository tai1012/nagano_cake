<h2 class="offset-md-2">配送先登録/一覧</h2>
<%= form_with model: @address, local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-5">
      <div>
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code, id:"inputPostal_code" %>
      </div>
      <div>
        <%= f.label "住所" %>
        <%= f.text_field :address, size:50, id:"inputAddress" %>
      </div>
      <div>
        <%= f.label "宛名" %>
        <%= f.text_field :name, id:"inputName" %>
      </div>
      <div class="text-end">
        <%= f.submit "新規登録", class:"btn btn-success"%>
      </div>
      <% end %>
    </div>

    <div class="">
      <table class="table table-borded text-white">
        <thead>
          <tr>
            <td>郵便番号</td>
            <td>住所</td>
            <td>宛名</td>
            <td> </td>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |delivery| %>
          <tr>
            <td>
              <%= delivery.postal_code %>
            </td>
            <td>
              <%= delivery.address %>
            </td>
            <td>
              <%= delivery.name %>
            </td>
            <td>
              <%= link_to "編集する", edit_address_path(delivery), class:"btn btn-success" %>
              <%= link_to "削除する", address_path(delivery), method: :delete, class:"btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
