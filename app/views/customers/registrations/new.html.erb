<div class="container">
  <div class="row">
    <h2 class="offset-md-1 col-md-2">新規会員登録</h2>
  </div>
  <div class="row">
    <%= form_with model:resource, local:true do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <div class="field">
        <div>
          <label for="inputName">名前</label>
          (姓)<%= f.text_field :first_name %>　(名)<%= f.text_field :last_name %>
        </div>
      </div>

      <div class="field">
        <div>
          <label for="inputName">フリガナ</label>
          (セイ)<%= f.text_field :first_name_kana %>　(メイ)<%= f.text_field :last_name_kana %>
        </div>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <div>
          <label for="inputPostal_code">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>

      <div class="field">
        <div>
          <label for="inputAddress">住所</label>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="field">
        <div>
          <label for="inputTelephone_number">電話番号(ハイフンなし)</label>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード" %><em>(確認用)</em>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "customers/shared/links" %>からログインしてください。
  </div>
</div>