<h2 class="offset-md-2 col-md-2">マイページ</h2>

<div class="container">
  <div class="row">
      <div class="offset-md-2 col-md-4">
        <strong class="col-xs-offset-1">　 登録情報　</strong>
        <%= link_to "編集する", edit_customers_path, class: "btn btn-success"%>
      </div>
    </div>
    <div class="row">
      <div>
        <table class="table table-bordered text-white">
          <tbody>
            <tr>
              <th scope="col">氏名</th>
              <td scope="row"><%= current_customer.first_name %> <%= current_customer.last_name %></td>
            </tr>
            <tr>
              <th scope="col">カナ</th>
              <td scope="row"><%= current_customer.first_name_kana %> <%= current_customer.last_name_kana %></td>
            </tr>
            <tr>
              <th scope="col">郵便番号</th>
              <td scope="row"><%= current_customer.postal_code %></td>
            </tr>
            <tr>
              <th scope="col">住所</th>
              <td scope="row"><%= current_customer.address %></td>
            </tr>
            <tr>
              <th scope="col">電話番号</th>
              <td scope="row"><%= current_customer.telephone_number %></td>
            </tr>
            <tr>
              <th scope="col">メールアドレス</th>
              <td scope="row"><%= current_customer.email %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="offset-md-1">
        <div>配送先</div>
        <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
        <div>注文一覧</div>
        <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>