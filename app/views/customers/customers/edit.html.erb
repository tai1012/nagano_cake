<h2 class="offset-md-2">会員情報編集</h2>
<%= form_with model: @customer, url:(customers_path), local:true do |f| %>
<div class="container">
  <div class="row">
    <div class="offset-md-2">
      <label class="mr-2"> 氏名  </label>
      <%= f.text_field :first_name %> <%= f.text_field :last_name %>
    </div>
    <div class="offset-md-2">
      <label> フリガナ</label>
      <%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %>
    </div>
    <div class="offset-md-2">
      <label>  郵便番号</label>
      <%= f.text_field :postal_code %>
    </div>
    <div class="offset-md-2">
      <label> 住所  </label>
      <%= f.text_field :address, size: 50 %>
    </div>
    <div class="offset-md-2">
      <label>電話番号</label>
      <%= f.text_field :telephone_number %>
    </div>
    <div class="offset-md-2">
      <label>メールアドレス</label>
      <%= f.text_field :email %>
    </div>
   </div>
  </div>

  <div class="offset-md-3">
    <%= f.submit "編集内容を保存", method: :patch, class: "btn btn-success"%>
    <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %>
  </div>
<% end %>
</div>