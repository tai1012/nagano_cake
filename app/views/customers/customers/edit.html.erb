<h2>会員情報編集</h2>
<%= form_with model: @customer, url:(edit_customers_path), local:true do |f| %>
<table>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :first_name %> <%= f.text_field :last_name %></td>
      <th>フリガナ</th>
      <td><%= f.text_field :first_name_kana %> <%= f.text_field :last_name_kana %></td>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
      <th>住所</th>
      <td><%= f.text_field :address, size: 50 %></td>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
  </tbody>
</table>

<div>
  <%= f.submit "編集内容を保存" %>
  <%= link_to "退会する", customers_unsubscribe_path %>
</div>
<% end %>