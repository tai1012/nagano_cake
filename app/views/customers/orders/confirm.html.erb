<<h2>注文情報確認</h2>
<div>
  <table>
    <thead>
      <tr>
        <td> </td>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 60, 40, format:'jpeg', size: '60x40' %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.taxed_price.to_s(:delimited)%>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <table>
    <tbody>
      <tr>
        <th>送料</th>
        <td><%= @order.shipping_fee %></td>
        <th>商品合計</th>
        <td><%= @sum %></td>
        <th>請求金額</th>
        <td><%= @order.total_payment %></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <div>
    <h3>支払方法</h3>
    <div><%= @order.payment_method_i18n %></div>
  </div>
  <div>
    <h3>お届け先</h3>
    <div>
      〒<%= @order.postal_code %>
      <%= @order.address %><br/>
      <%= @order.name %>
    </div>
  </div>
</div>
<%= form_with model: @order, url:(orders_path), method: :post, local:true do |f| %>
<%= f.hidden_field :id, value: @order.id %>
<%= f.hidden_field :customer_id, value: current_customer.id %>
<%= f.hidden_field :shipping_fee, value: @order.shipping_fee %>
<%= f.hidden_field :total_payment, value: @order.total_payment %>
<%= f.hidden_field :postal_code, value: @order.postal_code %>
<%= f.hidden_field :address, value: @order.address %>
<%= f.hidden_field :name, value: @order.name %>
<%= f.submit "注文を確定する" %>
<% end %>
