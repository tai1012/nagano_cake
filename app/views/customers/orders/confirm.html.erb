<h2>注文情報確認</h2>
<div>
  <table>
    <thead>
      <tr>
        <td> </td>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= attachment_image_tag cart_item.item, :image, :fill, 60, 40, format:'jpeg', size: '60x40' %>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.taxed_price.to_s(:delimited)%>
        </td>
        <td>
          <%= cart_item.amount %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <table>
    <tbody>
      <tr>
        <th>送料</th>
        <td>800</td>
        <th>商品合計</th>
        <td><%= @sum %></td>
        <th>請求金額</th>
        <td><%= @total %></td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <div>
    <h3>支払方法</h3>
    <div><%= @order.payment_method_i18n %></div>
  </div>
  <div>
    <h3>お届け先</h3>
    <div>
      〒<%= @order.postal_code %>
      <%= @order.address %><br/>
      <%= @order.name %>
    </div>
  </div>
</div>
  
