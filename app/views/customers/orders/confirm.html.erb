<h2 class="offset-md-2 col-md-2">注文情報確認</h2>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <table class="table text-white">
        <thead>
          <tr>
            <td>商品名</td>
            <td>単価(税込)</td>
            <td>数量</td>
            <td>小計</td>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, :fill, 60, 40, fallback:"PAK57_ichigonocake_TP_V4 (1).jpg", format:'jpeg', size: '60x40' %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.taxed_price.to_s(:delimited)%>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= (cart_item.item.taxed_price * cart_item.amount).to_s(:delimited) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <table class="table text-white">
        <tbody>
          <tr>
            <th>送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th>商品合計</th>
            <td><%= @sum %></td>
          </tr>
          <tr>
            <th>請求金額</th>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div>
    <div>
      <strong>支払方法</strong>
      <%= @order.payment_method_i18n %>
    </div>
    <div>
      <strong>お届け先</strong>
        〒<%= @order.postal_code %> <%= @order.address %>
        <%= @order.name %>
    </div>
  </div>
  <%= form_with model: @order, url:(orders_path), method: :post, local:true do |f| %>
  <%= f.hidden_field :id, value: @order.id %>
  <%= f.hidden_field :customer_id, value: current_customer.id %>
  <%= f.hidden_field :shipping_fee, value: @order.shipping_fee %>
  <%= f.hidden_field :total_payment, value: @order.total_payment %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.name %>
  <div class="text-center">
    <%= f.submit "注文を確定する", class:"btn btn-success" %>
  </div>
  <% end %>
</div>
