<h2>注文情報確認</h2>
<table>
  <thead>
    <tr>
      <td> </td>
      <td>商品名</td>
      <td>単価(税込)</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td>
        <%= attachment_image_tag cart_item.item, :image, :fill, 60, 40, format:'jpeg', size: '60x40' %>
        <%= cart_item.item.name %>
      </td>
      <td>
        <%= cart_item.item.taxed_price.to_s(:delimited)%>
      </td>
      <td>
        <%= cart_item.amount %>
      </td>
    </tr>
  </tbody>    
</table>
<div>
  <div>
    <h3>支払方法</h3>
    <div><%= @order.payment_method %></div>
  </div>
  <div>
    <h3>お届け先</h3>
    <div>
      <%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.nam%>
    </div>
  </div>
</div>
      
  <td>
    <%= (cart_item.item.taxed_price * cart_item.amount).to_s(:delimited) %>
  </td>
  
    <% end %>