<h2>注文情報入力</h2>

<%= form_with model: @order, local:true do |f| %>
<div>
  <h3>支払方法</h3>
  <div>
    <div>
      <%= f.radio_button :payment_method, "credit_card", checked:true %>
      <%= f.label "クレジットカード" %>
    </div>
    <div>
      <%= f.radio_button :payment_method, "transfer" %>
      <%= f.label "銀行振込" %>
    </div>
  </div>

  <h3>お届け先</h3>
  <div><!--違うモデル orderじゃない-->
    <div>
      <%= radio_button_tag :delivery_type, 0, checked:true %>
      <%= f.label "ご自身の住所" %><br/>
      〒<%= current_customer.postal_code %> <%= current_customer.address%><br/>
      <%= current_customer.first_name %><%= current_customer.last_name%>
    </div>
    
    <div>
      <%= radio_button_tag :delivery_type, 1 %>
      <%= f.label "登録済み住所から選択" %><br/>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :full_address) %>
    </div>
    
    <div>
      <%= radio_button_tag :delivery_type, 2 %>
      <%= f.label "新しいお届け先" %><br/>
      <table>
        <tbody>
          <tr>
            <td>
              <%= f.label "郵便番号(ハイフンなし)"%>
              <%= f.text_field :postal_code, value:nil %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label "住所" %>
              <%= f.text_field :address, size:50, value:nil %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.label "宛名" %>
              <%= f.text_field :name, value:nil %>
            </td>
          </tr>
        </tbody>
      </table>
      
    </div>
  </div>
  <%= f.submit "確認画面へ進む"%>
</div>
<% end %>

