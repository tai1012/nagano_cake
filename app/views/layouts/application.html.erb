    <link rel="canonical" href="https://getbootstrap.jp/docs/5.0/examples/cover/">
    <!-- Bootstrap core CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <!-- Favicons -->
    <link rel="apple-touch-icon" href="/docs/5.0/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
    <link rel="manifest" href="/docs/5.0/assets/img/favicons/manifest.json">
    <link rel="mask-icon" href="/docs/5.0/assets/img/favicons/safari-pinned-tab.svg" color="#7952b3">
    <link rel="icon" href="/docs/5.0/assets/img/favicons/favicon.ico">
    <meta name="theme-color" content="#7952b3">
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    <!-- Custom styles for this template -->
    <link href="cover.css" rel="stylesheet">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex h-100 text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h2 class="float-md-start mb-0">ながのcake</h2>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <% if customer_signed_in? %>
              <a class="btn btn-secondary my-2", href="customers/my_page">
                <!--< %= link_to customers_my_page_path do %>-->
                  マイページ
                <!--< % end %>-->
              </a>
              <a class="btn btn-secondary my-2", href="/items">
                <!--< %= link_to items_path do %>-->
                  商品一覧
                <!--< % end %>-->
              </a>
              <a class="btn btn-secondary my-2", href="/cart_items">
                <!--< %= link_to cart_items_path do %>-->
                  カート
                <!--< % end %>-->
              </a>
              <a>
                <%= link_to destroy_customer_session_path, method: :delete do %>
                  <label class="btn btn-secondary my-2">ログアウト</label>
                <% end %>
              </a>
            <% elsif admin_signed_in? %>
              <a class="btn btn-secondary my-2", href="/admins/items">
                <!--< %= link_to admins_items_path do %>-->
                商品一覧
                <!--< % end %>-->
              </a>
              <a class="btn btn-secondary my-2", href="/admins/customers">
                会員一覧
                <!--< %= link_to "会員一覧", admins_customers_path%>-->
              </a>
              <a class="btn btn-secondary my-2", href="/admins">
                注文履歴一覧
              </a> <!--           <　%=link_to "注文履歴一覧", admins_path%>-->
              <a class="btn btn-secondary my-2", href="admins/genres">
                ジャンル一覧<!-- < %= link_to "ジャンル一覧", admins_genres_path %>-->
              </a>
              <a href>
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <label class="btn btn-secondary my-2">ログアウト</label>
                <% end %>
              </a>
             <% else %>
              <a class="btn btn-secondary my-2", href="/about">
                About
              </a>
              <a class="btn btn-secondary my-2", href="/items">
                商品一覧
            　</a>
              <a class="btn btn-secondary my-2", href="/customers/sign_up">
                新規登録
              </a>
              <a class="btn btn-secondary my-2", href="/customers/sign_in">
                ログイン
              </a>
            <% end %>
          </nav>
          <% if customer_signed_in? %>
          <div class="mx-auto text-center" style="width: 200px;">
            ようこそ、<%= current_customer.first_name %>さん！
          </div>
          <% end %>
                        <!--検索機能-->

        </div>
      </header>

      <main>
          <%= flash_message(flash[:success], :success) if flash[:success] %>
          <%= flash_message(flash[:error], :danger) if flash[:error] %>
          <%= flash_message(flash[:alert], :warning) if flash[:alert] %>
          <%= flash_message(flash[:notice], :info) if flash[:notice] %>

          <%= yield %>
      </main>

      <footer>
        <p>CopyRight Infratop.inc</p>
      </footer>
    </div>
  </body>
</html>
