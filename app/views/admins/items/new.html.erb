<h2>商品新規登録</h2>
<%= form_with model:[:admins, @item] , local:true do |f| %>
  <div class="form-group">
    <label for="imputImage">商品画像</label>
    <div>
      <%= f.attachment_field :image, "商品画像" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputName">商品名</label>
    <div>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputIntroduction">商品説明</label>
    <div>
      <%= f.text_area :introduction %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputGenre">ジャンル</label>
    <div>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: '--選択してください--' %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPrice">税抜価格</label>
    <div>
      <%= f.text_field :price %>円
    </div>
  </div>
  <div class="form-group">
    <label for="inputStatus">販売ステータス</label>
    <div>
      <%= f.radio_button :is_active, '1' %>
      <%= f.label :is_active, '販売中', value: 1 %>
      
      <%= f.radio_button :is_active, '0' %>
      <%= f.label :is_active, '売切れ', value: 0 %>
      <!--<　%= f.select :is_active, [["売切れ", false],["販売中", true]], include_blank: '--選択してください--' %>-->
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録" %><!--class:"btn btn-success" %>-->
  </div>
<% end %>
