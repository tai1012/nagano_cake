<h2>ジャンル一覧・追加</h2>
<%= form_with model:[:admins, @genre], local:true do |f| %>
<div class="form-group">
  <label for="inputName">ジャンル名</label>
  <div>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit "新規登録"%>
  </div>
</div>
<% end %>

<table>
  <thead>
    <tr>
      <td>ジャンル</td>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td>
        <%= genre.name %>
        <div>
          <%= link_to "編集する", edit_admins_genre_path(genre.id) %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>