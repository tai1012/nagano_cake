<h2 class="offset-md-2 col-md-3">ジャンル一覧・追加</h2>
<%= form_with model:[:admins, @genre], local:true do |f| %>
<div class="row">
  <div class="new-genre offset-md-1">
    <div class="form-group">
      <label for="inputName">ジャンル名</label>
      <div class="col d-flex align-items-center">
        <div>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class:"btn btn-success"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-4 offset-md-1">
    <table class="table text-white align-middle">
      <th>ジャンル</th>
      <td></td>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to "編集する", edit_admins_genre_path(genre.id), class:"btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>