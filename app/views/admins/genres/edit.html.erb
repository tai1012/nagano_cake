<h2 class="offset-md-2 col-md-3">ジャンル編集</h2>
<%= form_with model:[:admins, @genre] , local:true do |f| %>
<div class="form-group new-genre offset-md-1">
  <div class="col d-flex align-items-center">
    <label for="inputName">ジャンル名</label>
    <div>
      <%= f.text_field :name, autofocus: true, id:"inputName" %>
