<h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
<div class="form-group">
  <label>会員ID</label>
  <div><%= @customer.id %></div>
</div>
<div class="form-group">
  <label>氏名</label>
  <div><%= @customer.first_name %> <%= @customer.last_name%></div>
</div>
<div class="form-group">
  <label>フリガナ</label>
  <div><%= @customer.first_name_kana %><%= @customer.last_name_kana %></div>
</div>
<div class="form-group">
  <label>郵便番号</label>
  <div><%= @customer.postal_code %></div>
</div>
<div class="form-group">
  <label>住所</label>
  <div><%= @customer.address %></div>
</div>
<div class="form-group">
  <label>電話番号</label>
  <div><%= @customer.telephone_number %></div>
</div>
<div class="form-group">
  <label>メールアドレス</label>
  <div><%= @customer.email %></div>
</div>
<div class="form-group">
  <label>会員ステータス</label>
  <div><%= @customer.is_active ? "有効":"無効" %></div>
</div>
<%= link_to "編集する", edit_admins_customer_path(@customer) %>

<%= link_to "注文履歴一覧", admins_order_path(@customer) %>